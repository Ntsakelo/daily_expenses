<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./styles.css" />
    <title>Expenses App</title>
  </head>
  <body>
    <div class="addExpenses">
      <div class="head">
        <h1>ENTER EXPENSES</h1>
      </div>
      <div class="error">
        <p class="errorText"></p>
      </div>
      <form action="/addExpense" method="POST">
        <input
          type="text"
          name="name"
          placeholder="Enter your name"
          class="name"
        />
        <div class="dropdown">
          <select name="category" id="category">
            <optgroup>
              <option value="">Select category</option>
              {{#each catList}}
                <option value="{{this.category}}">{{this.category}}</option>
              {{/each}}
            </optgroup>
          </select>
        </div>
        <input
          type="date"
          name="date"
          placeholder="date of expense"
          class="date"
        />
        <input
          type="number"
          name="amount"
          placeholder="Enter amount(R)"
          class="amount"
        />
        <button class="enterBtn" type="submit">Submit Expense</button>
      </form>
    </div>
  </body>
</html>